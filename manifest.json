{
    "name": "OGame Manager",
    "version": "1.0",
    "description": "Manage your OGame account easily",
    "manifest_version": 2,
    "background": {
        "scripts": ["eventsManager.js"],
        "persistant": false
    },
    "content_scripts": [
        {
          "matches": [
            "https://*.ogame.gameforge.com/*"
          ],
          "js": ["lib/jquery-3.3.1.min.js", "js/functions.js"]
        }
      ],
    "browser_action": {
        "default_popup": "menu.html"
    }
}